# 图片文件缓存大小（MB）
IMAGE_FILE_CACHE_SIZE_MB=1000

# 压缩文件处理配置
# 压缩包文件缓存大小（MB）
ARCHIVE_FILE_CACHE_SIZE_MB=2000
# 单个压缩包最大解压文件数量限制
ARCHIVE_MAX_FILES_LIMIT=1000
# 单个解压文件最大大小限制（MB）
ARCHIVE_MAX_FILE_SIZE_MB=100
# 解压总大小限制（MB）
ARCHIVE_MAX_TOTAL_SIZE_MB=500
# 解压超时时间（秒）
ARCHIVE_EXTRACT_TIMEOUT=300

# OpenAI API配置（用于图像OCR）
OPENAI_API_KEY=your-openai-api-key-here

# 缓存配置
CACHE_ROOT_DIR=cache
CACHE_EXPIRE_DAYS=90
PARSED_CONTENT_CACHE_SIZE_MB=2000
LOCAL_FILE_READER_CACHE_SIZE_MB=100

# 文件读取器配置
FILE_READER_MAX_WORKERS=5
FILE_READER_MAX_FILE_SIZE_MB=50
FILE_READER_MIN_CONTENT_LENGTH=10
FILE_READER_MAX_FILES_PER_REQUEST=10

# 本地文件读取器配置
LOCAL_FILE_ALLOWED_DIRECTORIES=/Users/xxxxx
LOCAL_FILE_ALLOW_ABSOLUTE_PATHS=true

# 日志配置
LOG_LEVEL=INFO
